<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp"
        tools:context=".MrHeadActivity">
    <ImageView
            android:id="@+id/body"
            android:src="@drawable/body"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
    />
    <ImageView
            android:id="@+id/hair"
            android:src="@drawable/hairr"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
    />
    <ImageView
            android:id="@+id/eyebrow"
            android:src="@drawable/eyebrow"
            app:layout_constraintTop_toBottomOf="@id/hair"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
    />
    <ImageView
            android:id="@+id/eyes"
            android:src="@drawable/eyes"
            app:layout_constraintTop_toBottomOf="@id/eyebrow"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
    />
    <ImageView
            android:id="@+id/beard"
            android:src="@drawable/beard"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/eyes"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
    />
    <ImageView
            android:id="@+id/moustache"
            android:src="@drawable/moustache"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/eyes"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
    />
    <CheckBox android:id="@+id/hairCheckbox"
              android:text="Rambut"
              app:layout_constraintTop_toBottomOf="@id/body"
              app:layout_constraintStart_toStartOf="@id/body"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
    />
    <CheckBox android:id="@+id/eyebrowCheckbox"
              android:text="Alis"
              app:layout_constraintTop_toBottomOf="@id/body"
              app:layout_constraintEnd_toEndOf="@id/body"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
    />
    <CheckBox android:id="@+id/moustacheCheckbox"
              android:text="Kumis"
              app:layout_constraintTop_toBottomOf="@id/hairCheckbox"
              app:layout_constraintStart_toStartOf="@id/body"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
    />
    <CheckBox android:id="@+id/beardCheckbox"
              android:text="Jenggot"
              app:layout_constraintTop_toBottomOf="@id/eyebrowCheckbox"
              app:layout_constraintEnd_toEndOf="@id/body"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
